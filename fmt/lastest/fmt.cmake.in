cmake_minimum_required(VERSION 3.10)
project(fmt--install NONE)

#==========================================
#Header
#==========================================
find_package(fmt  QUIET)
if(NOT fmt_FOUND AND NOT fmt_FIND_VERSION_EXACT)
    include(ExternalProject)
    if(NOT WIN32)
 # Linux or OSX Setting
        ExternalProject_Add(
        fmt
        #URL 
        GIT_REPOSITORY https://github.com/fmtlib/fmt.git
        #GIT_TAG 
        SOURCE_DIR ${CMAKE_BINARY_DIR}/repo/fmt
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    else(NOT WIN32)
 # Windows Setting
        ExternalProject_Add(
        fmt
        #URL 
        GIT_REPOSITORY https://github.com/fmtlib/fmt.git
        #GIT_TAG 
        SOURCE_DIR ${CMAKE_BINARY_DIR}/repo/fmt
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    endif(NOT WIN32)
endif()
