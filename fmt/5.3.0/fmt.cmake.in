cmake_minimum_required(VERSION 3.6)
project(fmt-5.3.0-install C CXX)

include(${CMAKE_CURRENT_SOURCE_DIR}/cmake/cppm_tool.cmake)
download_package(
    fmt
    5.3.0
    URL https://github.com/fmtlib/fmt/archive/5.3.0.tar.gz
    LOCAL
    CMAKE_ARGS
        -DFMT_DOC=OFF
        -DFMT_TEST=OFF
        -DFMT_FUZZ=OFF
        -DFMT_USE_CPP14=OFF
        ${CMAKE_ARGS}
    )

