cmake_minimum_required(VERSION 3.6)
project(fmt-git-install NONE)

include(${CMAKE_CURRENT_SOURCE_DIR}/cmake/cppm_tool.cmake)
download_package(
    fmt
    git
    GIT https://github.com/fmtlib/fmt.git LOCAL
    LOCAL
    CMAKE_ARGS
        -DFMT_DOC=OFF
        -DFMT_TEST=OFF
        -DFMT_FUZZ=OFF
        -DFMT_USE_CPP14=OFF
        ${CMAKE_ARGS}
)

