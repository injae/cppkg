cmake_minimum_required(VERSION 3.10)
project(nlpo--install NONE)

#==========================================
#Header
#==========================================
find_package(nlpo  QUIET)
if(NOT nlpo_FOUND AND NOT nlpo_FIND_VERSION_EXACT)
    include(ExternalProject)
    if(NOT WIN32)
 # Linux or OSX Setting
        ExternalProject_Add(
        nlpo
        #URL 
        GIT_REPOSITORY https://github.com/injae/nlpo.git
        #GIT_TAG 
        SOURCE_DIR repo
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    else(NOT WIN32)
 # Windows Setting
        ExternalProject_Add(
        nlpo
        #URL 
        GIT_REPOSITORY https://github.com/injae/nlpo.git
        #GIT_TAG 
        SOURCE_DIR repo
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    endif(NOT WIN32)
endif()
