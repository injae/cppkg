cmake_minimum_required(VERSION 3.6)
project(cpptoml-git-install NONE)

include(${CMAKE_CURRENT_SOURCE_DIR}/cmake/cppm_tool.cmake)
download_package(
    cpptoml
    git
    GIT https://github.com/skystrife/cpptoml.git
    LOCAL
    CMAKE_ARGS
        -DCPPTOML_BUILD_EXAMPLES=OFF
        -DENABLE_LIBCXX=OFF
        ${CMAKE_ARGS}
    )
