cmake_minimum_required(VERSION 3.10)
project(cppfs--install NONE)

find_package(cppfs  QUIET)
if(NOT cppfs_FOUND AND NOT cppfs_FIND_VERSION_EXACT)
    include(ExternalProject)
    if(NOT WIN32)
 # Linux or OSX Setting
        ExternalProject_Add(
        cppfs
        #URL 
        GIT_REPOSITORY https://github.com/cginternals/cppfs.git
        #GIT_TAG 
        SOURCE_DIR $ENV{HOME}/.cppm/install
        # Defulat cppkg install path if you want to install global path, remove this options
        #if you want local install add CMAKE_ARGS -DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local
        CMAKE_ARGS " ${CMAKE_ARGS} -DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local"
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    else(NOT WIN32)
 # Windows Setting
        ExternalProject_Add(
        cppfs
        #URL 
        GIT_REPOSITORY https://github.com/cginternals/cppfs.git
        #GIT_TAG 
        SOURCE_DIR $ENV{HOME}/.cppm/install
        #if you want local install add CMAKE_ARGS -DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local
        CMAKE_ARGS " ${CMAKE_ARGS} -DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local"
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    endif(NOT WIN32)
endif()
